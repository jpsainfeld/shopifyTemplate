<div class="span3 sidebar">

  <h3>{{ 'blog.general.recent_articles' | t }}</h3>
  {% for article in blog.articles limit:10 %}
  <div class="article">
  {% assign date = article.published_at | date: format: 'short' %}
    <p><a href="{{ article.url }}">{{ article.title }}</a> <em>{{ 'blog.general.posted_on' | t: date: date }}</em></p>
  </div>
  {% endfor %}

  {% if settings.display_blog_tags %}
  <div class="clearfix">
    {% if blog.all_tags.size > 0 %}
    <h3>{{ 'blog.general.tags' | t }}</h3>
    <ul class="tags">
      <li {% unless current_tags %} class="active"{% endunless %}><a href="{{ shop.url}}/blogs/{{ blog.handle }}">{{ 'blog.general.all' | t }}</a></li>
      {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li class="active">{{ tag | link_to_remove_tag: tag }}</li>
      {% else %}
      <li>{{ tag | link_to_tag: tag }}</li>
      {% endif %}
      {% endfor %}
    </ul>
    {% endif %}
  </div>
  {% endif %}

</div>
